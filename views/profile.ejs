<form method="POST" action="/events/eventsetup" >
	<div class="row">
		<div class="col s6 input-field">
			<label>start an event</label>
			<input type="text" name="name" placeholder="your event name here" value="<%= previousData ? previousData.name : '' %>">
			<button class="waves-effect waves-light btn" type="submit" name="action">start an event!<i class="material-icons right">add</i>
			</button>
		</div>
	</div>
</form>

<form method="POST" action="/profile/<%=user.id%>/?_method=DELETE">
	<div class="row">
		<div class="col s12 input-field">
			<input hidden type="text" name="id" value="<%=user.id%>">
			<button class="waves-effect waves-light btn" type="submit" name="action">delete account<i class="material-icons right">subtract</i>
			</button>
		</div>
	</div>
</form>


