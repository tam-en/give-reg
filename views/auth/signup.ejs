<br><h4>sign up</h4> <br>

<!-- // to do: email, user name, first name, last name, password, password verification -->

<div class="row">
	<form action="/auth/signup" method="POST">
		<div class="row">
			<div class="col s6 input-field">
				<label>first name</label>
				<input type="text" name="firstname" placeholder="your first name " value="<%= previousData ? previousData.firstname : '' %>">
			</div>
			<div class="col s6 input-field">
				<label>last name</label>
				<input type="text" name="lastname" placeholder="your last name" value="<%= previousData ? previousData.lastname : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s6 input-field">
				<label>user name</label>
				<input type="text" name="username" placeholder="your username" value="<%= previousData ? previousData.username : '' %>">
			</div>
			<div class="col s6 input-field">
				<label>email</label>
				<input type="text" name="email" placeholder="your email" value="<%= previousData ? previousData.email : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s3 input-field">
				<label>date of birth</label>
				<input type="text" class="datepicker" name="dob" placeholder="your birth date" value="<%= previousData ? previousData.dob : '' %>">
			</div>
			<div class="col s9 input-field">
				<label>image URL</label>
				<input type="text" name="image" placeholder="url to your image (optional)" value="<%= previousData ? previousData.image : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>your bio</label>
				<input type="text" name="bio" placeholder="tell us a little (or a lot) about yourself" value="<%= previousData ? previousData.bio : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s6 input-field">
				<label>password</label>
				<input type="text" name="password" placeholder="your password" value="<%= previousData ? previousData.password : '' %>">
			</div>
			<div class="col s6 input-field">
				<label>re-enter password</label>
				<input type="text" name="password_verify" placeholder="your password again" value="<%= previousData ? previousData.password_verify : '' %>">
			</div>
		</div>
		
		<div class="row">
			<div class="col s12 input-field">
				<button class="waves-effect waves-light btn" type="submit" name="action">sign up<i class="material-icons right">add</i>
				</button>
			</div>
		</div>
	</form>
</div>

